require 'webrick'

server = WEBrick::HTTPServer.new :Port => 1726

response_content = IO.read ARGV[0]

server.mount_proc("/features/content") do |request, response|
  response.body = response_content
  response['Content-Type'] = 'text/xml' 
end

server.mount_proc("/features/results") do |request, response|
  File.open(ARGV[1], 'w'){ |f| f.write(request.query['results']) }
  response.body = ""
  response['Content-Type'] = 'text/html' 
end

%w(INT TERM).each do |signal|
  trap signal do
    server.shutdown
    exit!
  end
end

server.start